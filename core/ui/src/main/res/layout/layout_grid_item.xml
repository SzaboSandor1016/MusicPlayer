<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/playlist_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/ic_music_library_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/playlist_title"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/playlist_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_default_grid_recycler_view_background"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/playlist_title"
        android:layout_width="170dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="placeholder playlist name"
        android:textColor="@color/title_text_color"
        android:textStyle="bold"
        android:textSize="14sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:paddingStart="16dp"
        android:paddingVertical="4dp"
        android:paddingEnd="36dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toTopOf="@id/playlist_title"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:elevation="12dp"
        android:layout_marginHorizontal="2dp"
        app:icon="@drawable/ic_play_24" />

</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/secondary</item>
        <item name="colorTertiaryContainer">@color/secondary_variant</item>
        <item name="colorOnTertiary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorOnSurfaceVariant">@color/color_on_surface</item>

        <item name="colorSurfaceContainer">@color/color_surface_container</item>

        <item name="colorSurfaceContainerHighest">@color/color_surface_container</item>

        <item name="colorSurfaceContainerLow">@color/color_surface_container_low_light</item>

        <item name="colorOnSecondaryContainer">@color/color_on_secondary_container</item>

        <item name="colorSecondaryContainer">@color/color_secondary_container</item>

        <item name="colorOutline">@color/color_outline_light</item>

        <item name="colorSurfaceInverse">@color/light_color_inverse_surface</item>

        <item name="song_options_style_attribute">@style/Widget.Material3.Button.TextButton</item>
    </style>

    <color name="color_outline">@color/color_outline_light</color>

    <color name="song_art_background">@color/song_art_background_light</color>

    <color name="title_text_color">@color/light_title_text_color</color>

    <color name="app_background_color">@color/app_background_light</color>

    <color name="equalizer_background_color">@color/color_surface_container_low_light</color>

    <color name="tab_layout_background_color">@color/tab_layout_background_light</color>

    <color name="recycler_view_background_color">@color/recycler_view_background_light</color>

    <color name="songs_header_background_color">@color/songs_header_background_color_light</color>

    <color  name="playlist_item_bottom_cover">@color/color_outline_light</color>

    <color name="played_music_note">@color/light_title_text_color</color>

    <style name="Widget.Material3.BottomSheet.0" parent="Widget.Material3.BottomSheet">

        <item name="shouldRemoveExpandedCorners">true</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="background">@drawable/shape_bottom_sheet_background</item>
    </style>

    <style name="Widget.Material3.TabLayout.0" parent="Widget.Material3.TabLayout">

        <item name="background">@color/primary_variant</item>
    </style>

    <style name="Widget.Material3.Button.IconButton.0" parent="Widget.Material3.Button.IconButton">

        <item name="iconTint">@color/color_surface_container</item>
    </style>

    <style name="Widget.Material3.Button.IconButton.1" parent="Widget.Material3.Button.IconButton">

        <item name="colorContainerChecked">@color/transparent</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="Widget.Material3.Button.TextButton.0" parent="Widget.Material3.Button.TextButton">

        <item name="iconTint">@color/color_surface_container</item>
        <item name="android:textColor">@color/color_surface_container</item>
        <item name="iconSize">20dp</item>
        <item name="android:paddingHorizontal">24dp</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_default_song_recycler_view_background"
    android:layout_margin="4dp"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/playlist_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:src="@drawable/ic_music_library_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/playlist_title"
        android:layout_margin="24dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/playlist_title"
        android:background="@drawable/shape_playlist_bottom_cover"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/playlist_title"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="placeholder playlist name"
        android:textColor="@color/night_title_text_color"
        android:textStyle="bold"
        android:textSize="14sp"
        android:maxLines="3"
        android:paddingHorizontal="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
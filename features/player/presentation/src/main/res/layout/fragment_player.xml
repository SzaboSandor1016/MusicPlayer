<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentPlayer"
    android:background="@drawable/shape_bottom_sheet_background">
    <!--TODO set peekHeight = 190dp ^-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView
            android:id="@+id/song_art"
            android:layout_width="190dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/player_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_music_note_single_36"
            android:alpha="0.2"
            tools:ignore="ContentDescription" />-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player_layout"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@id/playlist_recycler_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/shuffle"
                style="@style/Widget.Material3.Button.IconButton.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                app:icon="@drawable/ic_shuffle_24"
                app:layout_constraintBottom_toBottomOf="@id/song_artist"
                app:layout_constraintTop_toTopOf="@id/song_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:toggleCheckedStateOnClick="false"/>

            <ImageView
                android:id="@+id/song_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/song_artist"
                app:layout_constraintLeft_toRightOf="@id/shuffle"
                app:layout_constraintRight_toLeftOf="@id/song_title"
                android:background="@drawable/shape_song_album_art_background"
                android:src="@drawable/ic_music_note_single_36"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/song_title"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@id/song_icon"
                app:layout_constraintRight_toLeftOf="@id/repeat_mode"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/song_artist"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@id/song_icon"
                app:layout_constraintRight_toLeftOf="@id/repeat_mode"
                app:layout_constraintTop_toBottomOf="@id/song_title" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/repeat_mode"
                style="@style/Widget.Material3.Button.IconButton.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                app:icon="@drawable/ic_repeat_24"
                app:layout_constraintBottom_toBottomOf="@id/song_artist"
                app:layout_constraintTop_toTopOf="@id/song_title"
                app:layout_constraintRight_toRightOf="parent"
                app:toggleCheckedStateOnClick="false"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00/00:00"
                app:layout_constraintBottom_toBottomOf="@id/seek_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/seek_bar"
                app:layout_constraintTop_toTopOf="@id/seek_bar" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="16dp"
                android:padding="2dp"
                app:layout_constraintLeft_toRightOf="@id/progress"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/song_artist" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equalizer"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:icon="@drawable/ic_equalizer_24"
                app:layout_constraintBottom_toBottomOf="@id/play_pause"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/play_pause"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/skip_previous"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:icon="@drawable/ic_skip_previous_24"
                app:layout_constraintBottom_toBottomOf="@id/play_pause"
                app:layout_constraintRight_toLeftOf="@id/play_pause"
                app:layout_constraintTop_toTopOf="@id/play_pause"/>

            <com.example.core.ui.GradientBackgroundView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/play_pause"
                app:layout_constraintBottom_toBottomOf="@id/play_pause"
                app:layout_constraintLeft_toLeftOf="@id/play_pause"
                app:layout_constraintRight_toRightOf="@id/play_pause"
                app:cornerRadius="36dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/play_pause"
                style="@style/Widget.Material3.Button.IconButton.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:icon="@drawable/ic_play_24"
                app:iconSize="36dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seek_bar"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/skip_next"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:icon="@drawable/ic_skip_next_24"
                app:layout_constraintBottom_toBottomOf="@id/play_pause"
                app:layout_constraintLeft_toRightOf="@id/play_pause"
                app:layout_constraintTop_toTopOf="@id/play_pause"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/favourite"
                style="@style/Widget.Material3.Button.IconButton.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:checkable="true"
                app:icon="@drawable/ic_favourite_24"
                app:layout_constraintBottom_toBottomOf="@id/play_pause"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/play_pause"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlist_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/player_layout"
            android:requiresFadingEdge="vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
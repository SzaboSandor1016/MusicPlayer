<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/equalizer_background_color"
    android:clickable="true"
    android:focusable="true"
    tools:context=".FragmentEqualizer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/equalizer_switch"
            app:layout_constraintTop_toTopOf="@id/equalizer_switch"
            app:layout_constraintBottom_toBottomOf="@id/equalizer_switch"
            android:layout_marginVertical="16dp"
            android:text="@string/equalizer_on_off"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/equalizer_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="16dp"
            app:trackTint="@color/white"
            />

        <LinearLayout
            android:id="@+id/bands"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/equalizer_switch"
            app:layout_constraintBottom_toTopOf="@id/presets_text"
            android:orientation="horizontal"
            android:gravity="center"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/div_left"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintRight_toLeftOf="@id/presets_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/presets_text"
            app:layout_constraintBottom_toBottomOf="@id/presets_text"
            android:layout_marginHorizontal="16dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/presets_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/div_left"
            app:layout_constraintRight_toLeftOf="@id/div_right"
            android:gravity="center"
            android:text="Presets"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/div_right"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintLeft_toRightOf="@id/presets_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/presets_text"
            app:layout_constraintBottom_toBottomOf="@id/presets_text"
            android:layout_marginHorizontal="16dp"/>

        <LinearLayout
            android:id="@+id/presets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/presets_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bass_boost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/presets"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Bass boost"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/bass_boost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/presets"
            app:layout_constraintLeft_toRightOf="@id/bass_boost_text"
            app:layout_constraintRight_toRightOf="parent"
            android:valueFrom="0"
            android:valueTo="1000"
            app:thumbHeight="32dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/virtualizer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/virtualizer"
            app:layout_constraintBottom_toBottomOf="@id/virtualizer"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Virtualizer"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/virtualizer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/bass_boost"
            app:layout_constraintTop_toBottomOf="@id/bass_boost"
            app:layout_constraintRight_toRightOf="parent"
            android:valueFrom="0"
            android:valueTo="1000"
            app:thumbHeight="32dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>